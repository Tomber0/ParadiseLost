@*
    Edit panel for trips

*@
@model ParadiseLost.ViewModels.TripCreationEditModel

<div class="col-5 ml-3 mt-3">
    <form asp-action="Edit" asp-controller="Trip" method="post" enctype="multipart/form-data">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <p>
            @Html.LabelFor(m => m.Name, "Название")<br>
            @Html.TextBoxFor(m => m.Name, new { @class = "default-input" })
            <span asp-validation-for="Name" class="alert-info-label"></span>
        </p>
        <p>
            @Html.LabelFor(m => m.Description, "Описание")<br>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            <span asp-validation-for="Description" class="alert-info-label"></span>
        </p>
        <p>
            @Html.LabelFor(m => m.Tags, "Тэги")<br>
            @Html.TextAreaFor(m => m.Tags, new { @class = "form-control" })
            <span asp-validation-for="Tags" class="alert-info-label"></span>
        </p>

        <p>
            @Html.LabelFor(m => m.Location.City, "Город")<br>
            @Html.TextBoxFor(m => m.Location.City, new { @class = "form-control" })
            <span asp-validation-for="Location.City" class="alert-info-label"></span>
        </p>

        <p>
            @Html.LabelFor(m => m.Location.Street, "Улица")<br>
            @Html.TextBoxFor(m => m.Location.Street, new { @class = "form-control" })
            <span asp-validation-for="Location.City" class="alert-info-label"></span>
        </p>
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="Visible" value="True" id="customCheck1">
            <label class="custom-control-label" for="customCheck1">Видимость в каталоге</label>
        </div>
        <p>
        <input type="hidden" name="Imagestr" value="@Model.Imagestr" />
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupFileAddon01">Загрузить</span>
            </div>
            <div class="custom-file">
                <input type="file" name="Image" asp-for="Image" class="custom-file-input" id="inputGroupFile01"
                       aria-describedby="inputGroupFileAddon01">
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            </div>
        </div>

        </p>
        <hr class="mb-4">

        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>Изменить</button>

    </form>
</div>




@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

