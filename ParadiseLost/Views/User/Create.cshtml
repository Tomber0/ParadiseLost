@model ParadiseLost.ViewModels.UserRegistrationModel
<div class="row">
    <div class="col-1"></div>
    <div class="col-4 ml-3 mt-3 info-pannel">
        <form asp-action="CreateNewUser" asp-controller="User" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Вход</h1>
            <div class="row">
                <div class="mb-3">
                    <label for="email">Электронная почта:</label>
                    <input asp-for="Email" type="text" class="form-control" id="address" placeholder="Email" required="">
                    <span asp-validation-for="Email" class="alert-info-label"></span>
                </div>
            </div>

            <div class="row">
                <div class="mb-3">
                    <label for="username">Имя пользователя:</label>
                    <input asp-for="UserName" type="text" id="userName" class="form-control" placeholder="User name" required="" autofocus="">
                    <span asp-validation-for="UserName" class="alert-info-label"></span>
                </div>
            </div>

            <div class="row">
                <div class="mb-3">
                    <label for="password">Пароль:</label>
                    <input type="password" asp-for="Password" id="Password" class="form-control" placeholder="Password" required="">
                    <span asp-validation-for="Password" class="alert-info-label"></span>
                </div>
            </div>
            <div class="row">
                <div class="mb-3">
                    <label for="inputEmail">Подтвердите пароль:</label>
                    <input type="password" asp-for="ComfirmPassword" id="Password" class="form-control" placeholder="Password" required="">
                    <span asp-validation-for="ComfirmPassword" class="alert-info-label"></span>
                </div>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Вход</button>
        </form>
    </div>
</div>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
